<script>
    ;(function mobileScale () {
        // cross-browser fallback of @viewport

        var meta = document.querySelector('meta[name=viewport]')
        var mobile = 'width=414'
        var desktop = 'initial-scale=1'
        var mobileControlPoint = 731

        function resize () {
            var currentState = meta.getAttribute('content')
            if ((window.outerWidth || window.innerWidth) <= mobileControlPoint) {
                if (currentState !== mobile) meta.setAttribute('content', currentState.replace(desktop, mobile))
            } else {
                if (currentState !== desktop) meta.setAttribute('content', currentState.replace(mobile, desktop))
            }
        }

        // Первичный рендер - МП или нет
        resize()

        // Отслеживаем переворот устройства
        window.addEventListener('resize', resize)
    }())
</script>