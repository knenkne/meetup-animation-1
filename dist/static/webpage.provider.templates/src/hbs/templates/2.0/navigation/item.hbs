<a
    href="{{ this.url }}"
    class="navigation__item {{#ifEq menuSelected this.id}}-is-active{{/ifEq}}"
    aria-label="{{ this.title }}"
    data-unit="nav:primary:item"
    data-node="{{ this.id }}"
>
    <span class="navigation__item-title">{{ this.title }}</span>
    {{#if this.events}}
        <span
            class="navigation__item-events"
            title="{{message "template.header.navigation.events.new"}}"
            data-unit="nav:primary:item:events"
        >{{ this.events }}</span>
    {{/if}}
    {{#if this.novelty}}
        <span
            class="navigation__item-novelty"
            title="{{message "template.header.navigation.possibilities.new"}}"
            data-unit="nav:primary:item:novelty"
        ></span>
    {{/if}}
</a>
