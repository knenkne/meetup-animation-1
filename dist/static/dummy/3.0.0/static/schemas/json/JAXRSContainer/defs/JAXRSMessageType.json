{
  "id": "JAXRSContainer/defs/JAXRSMessageType.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "JAXRSMessageType": {
      "description": "JAX-RS standard container for messages, notifications and errors",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "uuid": {
          "type": "string",
          "maxLength": 128
        },
        "type": {
          "type": "string",
          "pattern": "^([Ee][Rr][Rr][Oo][Rr]|[Ww][Aa][Rr][Nn][Ii][Nn][Gg]|[Ii][Nn][Ff][Oo]|[Vv][Aa][Ll][Ii][Dd][Aa][Tt][Ii][Oo][Nn]|[Ff][Rr][Aa][Uu][Dd]|[Cc][Uu][Ss][Tt][Oo][Mm]|[Dd][Ii][Aa][Ll][Oo][Gg])$",
          "maxLength": 128
        },
        "code": {
          "type": "string",
          "maxLength": 256
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "text": {
          "type": "string",
          "maxLength": 512
        }
      },
      "required": [
        "type",
        "title"
      ]
    }
  }
}
