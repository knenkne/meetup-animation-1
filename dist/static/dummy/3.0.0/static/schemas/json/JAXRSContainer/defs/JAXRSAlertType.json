{
  "id": "JAXRSContainer/defs/JAXRSAlertType.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "JAXRSAlertType": {
      "description": "JAX-RS standard container for urgent alerts",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "maxLength": 128
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "text": {
          "type": "string",
          "maxLength": 512
        },
        "data": {
          "description": "Additional data for alert stored as key-value string pairs",
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[A-Za-z]+$": {
              "type": "string",
              "maxLength": 256
            }
          },
          "maxProperties": 16
        }
      }
    }
  }
}
