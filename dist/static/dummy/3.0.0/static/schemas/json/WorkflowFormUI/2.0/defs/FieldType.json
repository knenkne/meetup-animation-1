{
  "id": "WorkflowFormUI/2.0/defs/FieldType.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "FieldType": {
      "description": "Minimal field description for limited functionality mode",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "$ref": "WorkflowFormUI/2.0/defs/FieldIDType.json#/definitions/FieldIDType"
        },
        "type": {
          "type": "string",
          "enum": [
            "checkbox",
            "text",
            "select",
            "decimal",
            "integer",
            "date",
            "year",
            "month",
            "quarter",
            "time",
            "hidden",
            "multiselect"
          ]
        },
        "format": {
          "type": "string",
          "maxLength": 64
        },
        "formatConfig": {
          "type": "string",
          "maxLength": 256
        },
        "referenceId": {
          "type": "string",
          "maxLength": 128
        },
        "value": {
          "type": "string",
          "maxLength": 1024
        },
        "values": {
          "$ref": "WorkflowFormUI/2.0/defs/FlatArrayType.json#/definitions/FlatArrayType"
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "style": {
          "type": "string",
          "maxLength": 64
        },
        "readonly": {
          "type": "boolean"
        },
        "masked": {
          "type": "boolean"
        },
        "description": {
          "type": "string",
          "maxLength": 512
        },
        "tooltip": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "contents"
          ],
          "properties": {
            "title": {
              "type": "string",
              "maxLength": 256
            },
            "contents": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1024
            }
          }
        },
        "handleUIEvents": {
          "type": "array",
          "minItems": 1,
          "maxItems": 32,
          "additionalItems": false,
          "items": {
            "type": "object",
            "required": [
              "on",
              "eventName"
            ],
            "properties": {
              "on": {
                "type": "string",
                "enum": [
                  "blur",
                  "submit"
                ]
              },
              "eventName": {
                "type": "string",
                "minLength": 1,
                "maxLength": 256
              }
            },
						"additionalProperties": false
          }
        },
        "validators": {
          "type": "array",
          "items": {
            "$ref": "WorkflowFormUI/2.0/defs/ValidatorType.json#/definitions/ValidatorType"
          },
          "minItems": 1,
          "maxItems": 512,
          "additionalItems": false
        }
      },
      "required": [
        "id",
        "type"
      ]
    }
  }
}
