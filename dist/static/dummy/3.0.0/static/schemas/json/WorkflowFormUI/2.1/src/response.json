{
  "id": "WorkflowFormUI--2.0--response.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Workflow Form UI standard response",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "success": {
      "type": "boolean"
    },
    "body": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "result": {
          "type": "string",
          "enum": [
            "SUCCESS",
            "ERROR",
            "END",
            "EXTERNAL_ENTER",
            "EXTERNAL_RETURN"
          ]
        },
        "pid": {
          "type": "string",
          "maxLength": 256
        },
        "flow": {
          "type": "string",
          "maxLength": 256
        },
        "state": {
          "type": "string",
          "maxLength": 256
        },
        "output": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "document": {
              "$ref": "WorkflowFormUI/2.0/defs/DocumentPropertiesType.json#/definitions/DocumentPropertiesType"
            },
            "transition": {
              "type": "string",
              "enum": [
                "NEXT",
                "BACK",
                "UPDATE"
              ],
              "default": "NEXT"
            },
            "screens": {
              "type": "array",
              "items": {
                "$ref": "WorkflowFormUI/2.0/defs/ScreenType.json#/definitions/ScreenType"
              },
              "minItems": 1,
              "maxItems": 64,
              "additionalItems": false
            },
            "fields": {
              "$ref": "WorkflowFormUI/2.0/defs/FieldsKeyValueType.json#/definitions/FieldsKeyValueType"
            },
            "events": {
              "type": "array",
              "items": {
                "$ref": "WorkflowFormUI/2.0/defs/EventType.json#/definitions/EventType"
              },
              "minItems": 1,
              "additionalItems": false
            },
            "references": {
              "type": "object",
              "additionalProperties": false,
              "minProperties": 1,
              "maxProperties": 256,
              "patternProperties": {
                "^(?=.{1,128}$)([A-Za-z][A-Za-z0-9:_|-]*)$": {
                  "$ref": "WorkflowFormUI/2.0/defs/ReferenceType.json#/definitions/ReferenceType"
                }
              }
            },
            "progress": {
              "$ref": "WorkflowFormUI/2.0/defs/ProgressType.json#/definitions/ProgressType"
            }
          }
        },
        "history": {
          "type": "array",
          "items": {
            "$ref": "WorkflowFormUI/2.0/defs/HistoryItemType.json#/definitions/HistoryItemType"
          },
          "additionalItems": false
        },
        "url": {
          "type": "string",
          "maxLength": 512
        }
      },
      "required": [
        "result"
      ]
    },
    "messages": {
      "type": "array",
      "items": {
        "$ref": "JAXRSContainer/defs/JAXRSMessageType.json#/definitions/JAXRSMessageType"
      },
      "minItems": 1,
      "maxItems": 256,
      "additionalItems": false
    },
    "error": {
      "$ref": "JAXRSContainer/defs/JAXRSErrorType.json#/definitions/JAXRSErrorType"
    },
    "alerts": {
      "description": "Urgent alerts for PL",
      "type": "array",
      "items": {
        "$ref": "JAXRSContainer/defs/JAXRSAlertType.json#/definitions/JAXRSAlertType"
      },
      "minItems": 1,
      "maxItems": 256,
      "additionalItems": false
    }
  },
  "required": [
    "success"
  ]
}
