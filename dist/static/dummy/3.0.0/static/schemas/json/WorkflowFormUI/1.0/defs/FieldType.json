{
  "id": "WorkflowFormUI/1.0/defs/FieldType.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "FieldType": {
      "description": "Minimal field description for limited functionality mode",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "$ref": "WorkflowFormUI/1.0/defs/FieldIDType.json#/definitions/FieldIDType"
        },
        "type": {
          "type": "string",
          "enum": [
            "checkbox",
            "text",
            "select",
            "decimal",
            "integer",
            "date",
            "year",
            "month",
            "quarter",
            "time",
            "hidden"
          ]
        },
        "format": {
          "type": "string",
          "maxLength": 64
        },
        "formatConfig": {
          "type": "string",
          "maxLength": 256
        },
        "referenceId": {
          "type": "string",
          "maxLength": 128
        },
        "value": {
          "type": "string",
          "maxLength": 1024
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "style": {
          "type": "string",
          "maxLength": 64
        },
        "readonly": {
          "type": "boolean"
        },
        "masked": {
          "type": "boolean"
        },
        "description": {
          "type": "string",
          "maxLength": 512
        },
        "validators": {
          "type": "array",
          "items": {
            "$ref": "WorkflowFormUI/1.0/defs/ValidatorType.json#/definitions/ValidatorType"
          },
          "maxItems": 512,
          "additionalItems": false
        }
      },
      "required": [
        "id",
        "type",
        "value",
        "validators"
      ]
    }
  }
}
