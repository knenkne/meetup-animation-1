{
  "id": "WorkflowFormUI/1.0/defs/WidgetType.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "WidgetType": {
      "description": "Visual component that fully contains all required logic to work independently",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "maxLength": 128
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "description": {
          "type": "string",
          "maxLength": 1024
        },
        "properties": {
          "$ref": "WorkflowFormUI/1.0/defs/PropertiesType.json#/definitions/PropertiesType"
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "WorkflowFormUI/1.0/defs/FieldType.json#/definitions/FieldType"
          },
          "maxItems": 256,
          "additionalItems": false
        }
      },
      "required": [
        "type",
        "properties",
        "fields"
      ]
    }
  }
}
