<!doctype html>
<html lang="ru-RU">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,shrink-to-fit=no,initial-scale=1">
        <title>{{title}}</title>
        <link rel="icon" type="image/x-icon" href="{{favicon}}">
        <script>
            ;(function mobileScale () {
                // cross-browser fallback of @viewport

                var meta = document.querySelector('meta[name=viewport]')
                var mobile = 'width=device-width,shrink-to-fit=no,width=414'
                var desktop = 'width=device-width,shrink-to-fit=no,initial-scale=1'
                var mobileControlPoint = 731

                function resize () {
                    var currentState = meta.getAttribute('content')
                    if ((window.outerWidth || window.innerWidth) <= mobileControlPoint) {
                        if (currentState !== mobile) meta.setAttribute('content', mobile)
                    } else {
                        if (currentState !== desktop) meta.setAttribute('content', desktop)
                    }
                }

                // Первичный рендер - МП или нет
                resize()

                // Отслеживаем переворот устройства
                window.addEventListener('resize', resize)
            }())
        </script>
        <style>
            {{css}}
        </style>
        <style>
            html::before,
            body::before {
                display: none;
            }
        </style>
    </head>
    <body>
    <div id="{{container}}"></div>
    <script src="./{{mainJs}}" type="text/javascript"></script>
    </body>
</html>
