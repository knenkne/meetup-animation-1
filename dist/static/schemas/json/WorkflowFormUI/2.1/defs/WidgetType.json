{
  "id": "WorkflowFormUI/2.0/defs/WidgetType.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "WidgetType": {
      "description": "Visual component that fully contains all required logic to work independently",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "maxLength": 128
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "description": {
          "type": "string",
          "maxLength": 1024
        },
        "visible": {
          "type": "object",
          "required": [
            "id",
            "regexp"
          ],
          "additionalProperties": false,
          "properties": {
            "id": {
              "$ref": "WorkflowFormUI/2.0/defs/FieldIDType.json#/definitions/FieldIDType"
            },
            "regexp": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            }
          }
        },
        "readonly": {
          "type": "boolean"
        },
        "properties": {
          "$ref": "WorkflowFormUI/2.0/defs/PropertiesType.json#/definitions/PropertiesType"
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "WorkflowFormUI/2.0/defs/FieldType.json#/definitions/FieldType"
          },
          "minItems": 1,
          "maxItems": 256,
          "additionalItems": false
        },
        "events": {
          "type": "array",
          "additionalItems": false,
          "minItems": 1,
          "maxItems": 64,
          "items": {
            "$ref": "WorkflowFormUI/2.0/defs/EventType.json#/definitions/EventType"
          }
        }
      },
      "required": [
        "type"
      ]
    }
  }
}
