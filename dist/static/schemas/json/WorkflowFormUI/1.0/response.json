{
  "id": "WorkflowFormUI/1.0/response.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Workflow Form UI standard response",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "success": {
      "type": "boolean"
    },
    "body": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "result": {
          "type": "string",
          "enum": [
            "SUCCESS",
            "ERROR",
            "END",
            "EXTERNAL_ENTER",
            "EXTERNAL_RETURN"
          ]
        },
        "pid": {
          "type": "string",
          "maxLength": 256
        },
        "flow": {
          "type": "string",
          "maxLength": 256
        },
        "state": {
          "type": "string",
          "maxLength": 256
        },
        "output": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "document": {
              "$ref": "#/definitions/DocumentPropertiesType"
            },
            "screens": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ScreenType"
              },
              "minItems": 1,
              "additionalItems": false
            },
            "events": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/EventType"
              },
              "minItems": 1,
              "additionalItems": false
            },
            "references": {
              "type": "object",
              "patternProperties": {
                "^(?=.{1,128}$)([A-Za-z][A-Za-z0-9:_|-]*)$": {
                  "$ref": "#/definitions/ReferenceType"
                }
              },
              "additionalProperties": false,
              "maxProperties": 256
            },
            "progress": {
              "$ref": "#/definitions/ProgressType"
            }
          }
        },
        "history": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/HistoryItemType"
          },
          "additionalItems": false
        },
        "url": {
          "type": "string",
          "maxLength": 512
        }
      },
      "required": [
        "result"
      ]
    },
    "messages": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/JAXRSMessageType"
      },
      "minItems": 1,
      "maxItems": 256,
      "additionalItems": false
    },
    "error": {
      "$ref": "#/definitions/JAXRSErrorType"
    },
    "alerts": {
      "description": "Urgent alerts for PL",
      "type": "array",
      "items": {
        "$ref": "#/definitions/JAXRSAlertType"
      },
      "minItems": 1,
      "maxItems": 256,
      "additionalItems": false
    }
  },
  "required": [
    "success"
  ],
  "definitions": {
    "DocumentPropertiesType": {
      "description": "Set of key-value pairs to transport document system properties",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "documentId": {
          "type": "string",
          "maxLength": 256
        },
        "templateId": {
          "type": "string",
          "maxLength": 256
        },
        "srcDocumentId": {
          "type": "string",
          "maxLength": 256
        }
      },
      "patternProperties": {
        "^[A-Za-z]+$": {
          "type": "string",
          "maxLength": 256
        }
      },
      "maxProperties": 256
    },
    "ScreenType": {
      "description": "Logical group of widgets for user convenience",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "description": {
          "type": "string",
          "maxLength": 1024
        },
        "properties": {
          "$ref": "#/definitions/PropertiesType"
        },
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/WidgetType"
          },
          "maxProperties": 256,
          "additionalItems": false
        }
      },
      "required": [
        "properties",
        "widgets"
      ]
    },
    "EventType": {
      "description": "Exposes available event to form step",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 256
        },
        "type": {
          "type": "string",
          "maxLength": 256
        },
        "hidden": {
          "type": "boolean"
        },
        "title": {
          "type": "string",
          "maxLength": 64
        },
        "description": {
          "type": "string",
          "maxLength": 512
        }
      },
      "required": [
        "name"
      ]
    },
    "ReferenceType": {
      "description": "Properties and items for reference services",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "properties": {
          "$ref": "#/definitions/PropertiesType"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ReferenceItemType"
          },
          "maxItems": 2048,
          "additionalItems": false
        }
      },
      "required": [
        "properties",
        "items"
      ]
    },
    "ProgressType": {
      "description": "Client progress through process",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "range": {
          "type": "integer"
        },
        "remainder": {
          "type": "integer"
        }
      },
      "required": [
        "range",
        "remainder"
      ]
    },
    "HistoryItemType": {
      "description": "History item to display breadcrumbs",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "maxLength": 256
        },
        "flow": {
          "type": "string",
          "maxLength": 256
        },
        "flowId": {
          "type": "number"
        },
        "state": {
          "type": "string",
          "maxLength": 256
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "value": {
          "type": "string",
          "maxLength": 1024
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "HIDDEN",
            "DISABLED"
          ]
        }
      },
      "required": [
        "id",
        "flow",
        "state",
        "status"
      ]
    },
    "JAXRSMessageType": {
      "description": "JAX-RS standard container for messages, notifications and errors",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "uuid": {
          "type": "string",
          "maxLength": 128
        },
        "type": {
          "type": "string",
          "pattern": "^([Ee][Rr][Rr][Oo][Rr]|[Ww][Aa][Rr][Nn][Ii][Nn][Gg]|[Ii][Nn][Ff][Oo]|[Vv][Aa][Ll][Ii][Dd][Aa][Tt][Ii][Oo][Nn]|[Ff][Rr][Aa][Uu][Dd]|[Cc][Uu][Ss][Tt][Oo][Mm])$"
        },
        "code": {
          "type": "string",
          "maxLength": 256
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "text": {
          "type": "string",
          "maxLength": 512
        }
      },
      "required": [
        "type",
        "title"
      ]
    },
    "JAXRSErrorType": {
      "description": "JAX-RS standard container for system errors",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "uuid": {
          "type": "string",
          "maxLength": 128
        },
        "code": {
          "type": "string",
          "maxLength": 256
        },
        "system": {
          "type": "string",
          "maxLength": 256
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "text": {
          "type": "string",
          "maxLength": 512
        }
      },
      "required": [
        "uuid",
        "code"
      ]
    },
    "JAXRSAlertType": {
      "description": "JAX-RS standard container for urgent alerts",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "maxLength": 128
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "text": {
          "type": "string",
          "maxLength": 512
        },
        "data": {
          "description": "Additional data for alert stored as key-value string pairs",
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[A-Za-z]+$": {
              "type": "string",
              "maxLength": 256
            }
          },
          "maxProperties": 16
        }
      }
    },
    "PropertiesType": {
      "description": "Set of key-value pairs to transport plain settings",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[A-Za-z]+$": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "string",
              "maxLength": 256
            },
            {
              "type": "boolean"
            },
            {
              "type": "null"
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "maxLength": 64
              },
              "maxItems": 128,
              "additionalItems": false
            }
          ]
        }
      },
      "maxProperties": 256
    },
    "WidgetType": {
      "description": "Visual component that fully contains all required logic to work independently",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "maxLength": 128
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "description": {
          "type": "string",
          "maxLength": 1024
        },
        "properties": {
          "$ref": "#/definitions/PropertiesType"
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FieldType"
          },
          "maxItems": 256,
          "additionalItems": false
        }
      },
      "required": [
        "type",
        "properties",
        "fields"
      ]
    },
    "ReferenceItemType": {
      "description": "Primary and additional properties for single reference service item",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {
          "type": "string",
          "maxLength": 1024
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "properties": {
          "$ref": "#/definitions/PropertiesType"
        }
      },
      "required": [
        "value",
        "title"
      ]
    },
    "FieldType": {
      "description": "Minimal field description for limited functionality mode",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "$ref": "#/definitions/FieldIDType"
        },
        "type": {
          "type": "string",
          "enum": [
            "checkbox",
            "text",
            "select",
            "decimal",
            "integer",
            "date",
            "year",
            "month",
            "quarter",
            "time",
            "hidden"
          ]
        },
        "format": {
          "type": "string",
          "maxLength": 64
        },
        "formatConfig": {
          "type": "string",
          "maxLength": 256
        },
        "referenceId": {
          "type": "string",
          "maxLength": 128
        },
        "value": {
          "type": "string",
          "maxLength": 1024
        },
        "title": {
          "type": "string",
          "maxLength": 256
        },
        "style": {
          "type": "string",
          "maxLength": 64
        },
        "readonly": {
          "type": "boolean"
        },
        "masked": {
          "type": "boolean"
        },
        "description": {
          "type": "string",
          "maxLength": 512
        },
        "validators": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ValidatorType"
          },
          "maxItems": 512,
          "additionalItems": false
        }
      },
      "required": [
        "id",
        "type",
        "value",
        "validators"
      ]
    },
    "FieldIDType": {
      "description": "Field id to describe tree-like objects as plain key-value structures",
      "type": "string",
      "pattern": "^(?=.{1,256}$)([A-Za-z0-9][A-Za-z0-9:_|-]*)$",
      "minLength": 1,
      "maxLength": 256
    },
    "ValidatorType": {
      "description": "Field validation description",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "regexp",
            "minLength",
            "maxLength",
            "required",
            "minValue",
            "maxValue"
          ]
        },
        "value": {
          "type": "string",
          "maxLength": 512
        },
        "message": {
          "type": "string",
          "maxLength": 512
        }
      },
      "required": [
        "type",
        "value",
        "message"
      ],
      "additionalProperties": false
    }
  }
}
